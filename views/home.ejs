
<html>
    <head>
        <title>Codeial || <%=title %></title>
        <link rel="stylesheet" href="/css/home.css"></link>
    </head>
    <body>

        <div>
            <h1> <%= title %></h1>
           <% if(locals.user) {%>
            <form action="/posts/create-post" id="create-post" method="post">
                <textarea placeholder="What's on your mind.." col="30" rows="3" name="postContent" class="posts-textarea"></textarea>
                <button type="submit">Post</button>
            </form>

          <% } %>
         </div>
         <div>
            <% for(post of posts) { %>
                <%- include("_post")%>
            <% } %>
         </div>
         <div class="List_of_users">
            <h1>USER DETAILS </h1>
            <% for(user of allusers) { %>
                <div>
                  
                   <a href="/users/profile/<%=user.id%>"><%=  user.name %> </a>
                </div>
                <div>
                  <a href="#">Follow</a>
                </div>
                
            <% } %>
         </div>
    </body>
    <script src="/js/home_posts.js"></script>
</html> 